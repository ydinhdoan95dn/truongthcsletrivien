# ==============================================
# HTACCESS - Web App Hoc tap Truc tuyen
# Truong Tieu hoc Bui Thi Xuan
# Tuong thich: XAMPP Local + Apache Server
# ==============================================

# Bat mod_rewrite
<IfModule mod_rewrite.c>
    RewriteEngine On

    # Thu muc goc cua ung dung
    # Production (domain rieng): RewriteBase /
    # Development (localhost): RewriteBase /truongbuithixuan/

    # Tu dong detect moi truong - Ho tro nhieu domain
    # Production domains: truongbuithixuan.online, topwebvietnam.com
    RewriteCond %{HTTP_HOST} (truongthcsletrivien\.online|truongthcsletriven\.com|truongbuithixuan\.online|topwebvietnam\.com)$ [NC]
    RewriteRule .* - [E=BASE:/]

    # Local Virtual Host (truongbuithixuan.local)
    RewriteCond %{HTTP_HOST} truongbuithixuan\.local$ [NC]
    RewriteRule .* - [E=BASE:/]

    # Localhost development
    RewriteCond %{HTTP_HOST} ^localhost$ [NC]
    RewriteRule .* - [E=BASE:/truongbuithixuan/]

    # Mac dinh RewriteBase
    RewriteBase /

    # Chuyen HTTP sang HTTPS tren production
    RewriteCond %{HTTP_HOST} (truongthcsletrivien\.online|truongthcsletriven\.com|truongbuithixuan\.online|topwebvietnam\.com)$ [NC]
    RewriteCond %{HTTPS} off
    RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

    # Chuyen www sang non-www
    RewriteCond %{HTTP_HOST} ^www\.truongthcsletrivien\.online$ [NC]
    RewriteRule ^(.*)$ https://truongthcsletrivien.online/$1 [L,R=301]

    RewriteCond %{HTTP_HOST} ^www\.truongthcsletriven\.com$ [NC]
    RewriteRule ^(.*)$ https://truongthcsletriven.com/$1 [L,R=301]

    RewriteCond %{HTTP_HOST} ^www\.truongbuithixuan\.online$ [NC]
    RewriteRule ^(.*)$ https://truongbuithixuan.online/$1 [L,R=301]

    # Khong rewrite cac file va thu muc ton tai
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d

    # Chuyen huong tat ca request ve index.php (neu can SPA routing)
    # RewriteRule ^(.*)$ index.php?url=$1 [QSA,L]
</IfModule>

# ==============================================
# BAO MAT
# ==============================================

# Chan truy cap truc tiep vao file config
<FilesMatch "^(config\.php|\.env|\.git)">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order deny,allow
        Deny from all
    </IfModule>
</FilesMatch>

# Chan truy cap thu muc includes
<IfModule mod_rewrite.c>
    RewriteRule ^includes/ - [F,L]
    RewriteRule ^truongbuithixuan/includes/ - [F,L]
</IfModule>

# Chan directory listing
Options -Indexes

# Chan truy cap file .htaccess
<Files .htaccess>
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order deny,allow
        Deny from all
    </IfModule>
</Files>

# ==============================================
# HIEU SUAT & CACHE
# ==============================================

# Bat nen Gzip
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/json
</IfModule>

# Cache cho file tinh
<IfModule mod_expires.c>
    ExpiresActive On

    # Hinh anh - cache 1 thang
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/svg+xml "access plus 1 month"
    ExpiresByType image/webp "access plus 1 month"
    ExpiresByType image/x-icon "access plus 1 year"

    # CSS va JS - cache 1 tuan
    ExpiresByType text/css "access plus 1 week"
    ExpiresByType application/javascript "access plus 1 week"
    ExpiresByType text/javascript "access plus 1 week"

    # Font - cache 1 thang
    ExpiresByType font/woff "access plus 1 month"
    ExpiresByType font/woff2 "access plus 1 month"
    ExpiresByType application/font-woff "access plus 1 month"
    ExpiresByType application/font-woff2 "access plus 1 month"

    # HTML - khong cache
    ExpiresByType text/html "access plus 0 seconds"
</IfModule>

# ==============================================
# CHARSET & MIME TYPES
# ==============================================

# Mac dinh UTF-8
AddDefaultCharset UTF-8

# Them MIME types
<IfModule mod_mime.c>
    AddType application/javascript .js
    AddType text/css .css
    AddType image/svg+xml .svg
    AddType image/webp .webp
    AddType font/woff .woff
    AddType font/woff2 .woff2
    AddType application/pdf .pdf
    AddType application/msword .doc
    AddType application/vnd.openxmlformats-officedocument.wordprocessingml.document .docx
    AddType application/vnd.ms-powerpoint .ppt
    AddType application/vnd.openxmlformats-officedocument.presentationml.presentation .pptx
</IfModule>

# ==============================================
# XU LY LOI
# ==============================================

# Trang loi tuy chinh (neu co)
# ErrorDocument 404 /errors/404.php
# ErrorDocument 500 /errors/500.php

# ==============================================
# PHP SETTINGS (neu server cho phep)
# ==============================================

<IfModule mod_php5.c>
    php_value upload_max_filesize 50M
    php_value post_max_size 50M
    php_value max_execution_time 300
    php_value max_input_time 300
    php_value memory_limit 256M
</IfModule>

<IfModule mod_php7.c>
    php_value upload_max_filesize 50M
    php_value post_max_size 50M
    php_value max_execution_time 300
    php_value max_input_time 300
    php_value memory_limit 256M
</IfModule>

<IfModule mod_php.c>
    php_value upload_max_filesize 50M
    php_value post_max_size 50M
    php_value max_execution_time 300
    php_value max_input_time 300
    php_value memory_limit 256M
</IfModule>

# ==============================================
# CORS (Cross-Origin Resource Sharing)
# ==============================================

<IfModule mod_headers.c>
    # Cho phep Google Docs Viewer truy cap file
    <FilesMatch "\.(pdf|doc|docx|ppt|pptx|xls|xlsx)$">
        Header set Access-Control-Allow-Origin "*"
        Header set Access-Control-Allow-Methods "GET, OPTIONS"
        Header set Access-Control-Allow-Headers "Content-Type"
    </FilesMatch>

    # Bao mat headers
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set X-XSS-Protection "1; mode=block"
</IfModule>
